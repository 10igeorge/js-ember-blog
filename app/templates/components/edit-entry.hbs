{{#if editEntryForm}}
  <h1>Edit Entry</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title:</label>
          {{input value=title id="title" placeholder=post.title}}
        </div>

        <div class="form-group">
          <label for="author">Author:</label>
          {{input value=author id="author" placeholder=post.author}}
        </div>

        <div class="form-group">
          <label for="date">Date:</label>
          {{input value=date id="date" placeholder=post.date}}
        </div>

        <div class="form-group">
          <label for="body">Body:</label>
          {{input value=body id="body" placeholder=post.body}}
        </div>

        <div class="form-group">
          <label for="image">Image:</label>
          {{input value=image id="image" placeholder=post.image}}
        </div>
        <button {{action 'editEntry' post}}>Submit</button>
      </form>
    </div>
{{else}}
    <button {{action 'editEntryForm'}}>Edit Entry</button>
{{/if}}
