{{#if newComment}}
    <div>
      <form>
        {{input value=postId type="hidden"}}
        <div class="form-group">
          <label for="name">Your Name:</label><br>
          {{input value=name id="name"}}
        </div>

        <div class="form-group">
          <label for="email">Email:</label><br>
          {{input value=email id="email"}}
        </div>

        <div class="form-group">
          <label for="text">Comment:</label><br>
          {{textarea value=text id="text" cols="60" rows="10"}}
        </div>
        <button class="btn btn-primary btn-sm" {{action 'submitComment'}}>Submit</button><br><br><hr>
      </form>
    </div>
{{else}}
    <button class="btn btn-sm btn-success" id="submitNewComment" {{action 'showCommentForm'}}>New Comment</button>
{{/if}}
