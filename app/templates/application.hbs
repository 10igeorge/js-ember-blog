<div class="wrapper">
  <header>
    <div class="jumbotron">
    {{#link-to 'index'}}<img src="/assets/images/header.jpg">{{/link-to}}
    </div>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          {{#link-to 'index'}}<a class="navbar-brand" href="#"><span class="logo">hike&amp;bike</span></a>{{/link-to}}
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <ul class="nav navbar-nav navbar-right">
            <li class="active">{{#link-to 'about'}}About<span class="sr-only">(current)</span>{{/link-to}}</li>
            <li>{{#link-to 'contact'}}Contact Us{{/link-to}}</li>
            {{#bs-dropdown tagName="li"}}
              {{#bs-dropdown-toggle}}Search<span class="caret"></span>{{/bs-dropdown-toggle}}
              {{#bs-dropdown-menu}}
                <li>{{#link-to 'index'}}Short rides{{/link-to}}</li>
                <li>{{#link-to 'index'}}Long rides{{/link-to}}</li>
                <li>{{#link-to 'index'}}Short hikes{{/link-to}}</li>
                <li>{{#link-to 'index'}}Long hikes{{/link-to}}</li>
              {{/bs-dropdown-menu}}
            {{/bs-dropdown}}
          </ul>
        </div>
      </div>
    </nav>
  </header>


  <div class="container">
    {{outlet}}
    <footer id="footer-wrapper">
      <div class="copyright">
        &copy; 2016 Izzy &amp; Neil
        {{#link-to 'admin'}}<span class="admin">Admin</span>{{/link-to}}
      </div>
    </footer>
  </div>
</div>
